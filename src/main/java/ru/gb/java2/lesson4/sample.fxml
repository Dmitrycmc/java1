<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>

<VBox fx:controller="ru.gb.java2.lesson4.Controller" xmlns:fx="http://javafx.com/fxml"
      alignment="center">
    <TextArea fx:id="chatTextArea" VBox.vgrow="ALWAYS" wrapText="true" style="-fx-opacity: 1"/>
    <TextField fx:id="messageTextField" onAction="#onSend"/>
    <Button text="Send" onAction="#onSend"/>
</VBox>